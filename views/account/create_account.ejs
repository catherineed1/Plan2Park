        <div class="col">
			<div class="card" id="login" style="align-items: center;">
				<h1 id="loginH">Create Account</h1>
				<form action="/auth" method="post" id="createAccountForm">
          <label id="loginLabel" for="fullname">
						<i class="fas fa-user"></i>
					</label>
					<input type="text" name="fullname" placeholder="Full Name" id="fullname" required>
					<label id="loginLabel" for="email">
						<i class="fas fa-envelope"></i>
					</label>
					<input type="text" name="email" placeholder="Email" id="email" required>
					<label id="loginLabel" for="password">
						<i class="fas fa-lock"></i>
					</label>
					<input type="password" name="password" placeholder="Password" id="password" required>
          <button class="btn btn-primary" id="createAccountBtn">Create</button>
				</form><br>
        <a href="login">Back to Login</a>
			</div>
        </div>
      </div>
